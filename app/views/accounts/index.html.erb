<p id="notice"><%= notice %></p>

<h1>Accounts</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col"> Name</th>
      <th scope="col">Age</th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.name %></td>
        <td><%= account.age %></td>
        <td><%= link_to 'Show', account, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_account_path(account), class: "btn btn-success" %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Account', new_account_path, class: "btn btn-primary" %>
